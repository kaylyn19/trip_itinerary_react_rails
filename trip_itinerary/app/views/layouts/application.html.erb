<!DOCTYPE html>
<html>
  <head>
    <title>Trip Itinerary</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <% if user_signed_in? %>
      <p>Signed In as <%= current_user.full_name%> | <%= link_to "Sign Out", session_path, method: :delete, data: {confirm: "Are you sure you want to sign out?"}%></p>
    <% else %>
      <%= link_to "Sign In", new_session_path%> | 
      <%= link_to "Sign Up", new_user_path%>
    <% end %>
    <%= flash[:notice] || flash[:alert]%>
  </head>

  <body>
    <%= yield %>
  </body>
</html>

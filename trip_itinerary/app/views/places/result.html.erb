<h1>Result of Your <%= @trip_name.titleize%> Trip</h1>

<p>Yout trip is from <%= @from%> to <%= @to%> for <%= @duration%> days</p>
<p>Your choice of attraction sites are:</p>
<ul>
  <% @plan.keys.map do |place|%>
    <li><%= place.titleize%></li>
  <% end %>
</ul>

<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 500px;'></div>
</div>

<script>
    handler = Gmaps.build('Google');
    handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){


    <% @plan.each do |place, value| %>
      lastMarker = handler.addMarkers([
        { 
          "lat": <%= value[:coordinates][0] %>,
          "lng": <%= value[:coordinates][1] %>,
          "infowindow": "<%= place %>"
         }
    ]);

    <% end %>

    handler.bounds.extendWith(lastMarker);
    handler.fitMapToBounds();

    handler.getMap().setZoom(12)
    });
</script>

<h1>Your Itinerary</h1>
<table>
  <tr>
    <th>Day(s)<th>
    <th>Attractions<th>
    <th>Address<th>
  </tr>
  <% for index in 0...@duration %>
    <tr>
      <td><%= index + 1%><td>
      <td>
         <ul>
          <% @each_day[index].split(', ').each do |place|%>
            <li><%= place.titleize%></li>
          <% end %>
         </ul>
      <td>
      <td>
        <ul>
          <% @each_day[index].split(', ').each do |place|%>
            <li><%= Place.find_by(name: place.titleize).address%></li>
          <% end %>
        </ul>
      <td>
    </tr>
  <% end %>
</table>

<%= form_with model: @itinerary, local: true do |form|%>
  <%= form.hidden_field :name, value: params[:trip_name]%>
  <%= form.submit%>
<% end %>

<%= form_with model: [@place, @itinerary, @destination], local: true do |form|%>
  <%= form.hidden_field :from_date, DateTime.strptime(@from, '%Y-%m-%d') %>
  <%= form.hidden_field :to_date, DateTime.strptime(@to, '%Y-%m-%d') %>
  <% @labels.each do |place|%>
    <%  find_place = Place.find_by(name: place.titleize)%>
    <%= form.hidden_field :place_id, find_place.id%>
  <% end %>
  <%= form.submit "Save Itinerary"%>
<% end %>